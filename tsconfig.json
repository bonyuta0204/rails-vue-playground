{
  "compilerOptions": {
    "strict": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["app/javascript/src/*"]
    },
    "sourceMap": true,
    "target": "es5",
    "noEmit": true
  },
  "vueCompilerOptions": {
    "target": 2,
    "experimentalDisableTemplateSupport": true
  },
  "exclude": ["node_modules", "vendor", "public", "cypress"],
  "compileOnSave": false
}
